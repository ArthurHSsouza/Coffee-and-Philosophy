<div class="card">
    <div class="card-body">
        <br>
        <h1 style="color:  rgb(187, 45, 45);">{{categoria}}</h1><br>
        {{#if postagens}}
         {{#each postagens}}
          <div class="card">
              <div class="card-body" >
                  <h5>{{titulo}}</h5><br>
                  <p><b>{{descricao}}</b></p>
                  <small>{{date}}</small><br><br><br>
                  <div class="text-right">
                    <a style="position:relative; top:  -50px;" href="/exibirPost/{{slug}}" class="btn btn-danger mt-4">Ler mais</a>
                  </div> 
              </div>
          </div><br>
          {{/each}}
        {{else}}
        <br>
        <h3 style="color:grey;">NÃ£o existem postagens nessa categoria</h3>
        {{/if}}
    </div>
</div>