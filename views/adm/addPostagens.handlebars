        <h2>Cadastro de postagens: </h2><br><hr>
        <div class="card">
            <div class="card-body">
 <form action="/admin/novaPostagem" method="POST">
         <label for="titulo"><b>Titulo:</b></label>
         <input type="text" name="titulo" class="form-control" required>
         <label for="descricao"><b>Descric√£o:</b></label>
         <input type="text" name="descricao" class="form-control" required>
         <label for="slug"><b>Slug: </b></label>
         <input type="text" name="slug" class="form-control" required>
          <label for="conteudo"><b>Conteudo:</b></label>
         <textarea name="conteudo" cols="15" rows="10" id="conteudo" class="form-control"></textarea><br>
        <label for="categoria"><b>Categoria:</b></label>
         <select name="categoria" class="form-control">
          {{#each categoria}}
          <option value="{{_id}}">{{nome}}</option>
          {{/each}}
         </select><br>
         <a><button class="btn btn-success" style="color: white;">Criar</button></a>
         <br><br><br><br>
        </form>
            </div>
        </div>
       
    </div>
</div>
 <script src="/tinymce/tinymce.min.js"></script>
 <script>
    tinymce.init({
     language: 'pt_BR',
     selector: '#conteudo',
     plugins: ["image print link hr lists searchreplace wordcount fullscreen insertdatetime media save table paste emoticons"]
  }) 
 </script>
 
